    <script>
        function showToast(message, type = 'success', duration = 5000) {
            const toastContainer = document.getElementById('toastContainer');
            if (!toastContainer) return;

            const toast = document.createElement('div');
            toast.className = 'toast';
            
            let toastHTML = `
                <div class="message">${message}</div>
                ${type === 'success' ? `
                    <div class="toast-actions">
                        <a href="/Sepet" class="toast-button">Sepeti Gör</a>
                    </div>
                ` : ''}
            `;

            toast.innerHTML = toastHTML;
            toastContainer.appendChild(toast);

            // Animasyon ile göster
            requestAnimationFrame(() => {
                toast.style.animation = 'slideIn 0.3s ease-out forwards';
            });

            // Belirtilen süre sonra kaldır
            setTimeout(() => {
                toast.style.animation = 'slideOut 0.3s ease-out forwards';
                setTimeout(() => {
                    toastContainer.removeChild(toast);
                }, 300);
            }, duration);
        }

        function showNotification(message, type = 'success', duration = 5000) {
            const container = document.getElementById('notificationContainer');
            const notification = document.createElement('div');
            notification.className = 'notification';
            
            let icon = type === 'success' ? 'check-circle' : 'exclamation-circle';
            let actionButton = type === 'success' ? `
                <a href="/Sepet" class="action">
                    Sepete Git
                </a>
            ` : '';
            
            notification.innerHTML = `
                <div class="icon">
                    <i class="fas fa-${icon}"></i>
                </div>
                <div class="content">
                    <p class="message">${message}</p>
                </div>
                ${actionButton}
                <button class="close" onclick="this.parentElement.remove()">
                    <i class="fas fa-times"></i>
                </button>
            `;
            
            container.appendChild(notification);
            
            // Animasyon için requestAnimationFrame kullanımı
            requestAnimationFrame(() => {
                notification.classList.add('show');
            });

            // Belirtilen süre sonra bildirimi kaldır
            setTimeout(() => {
                notification.classList.remove('show');
                setTimeout(() => {
                    notification.remove();
                }, 300);
            }, duration);
        }

        // Global updateCartBadge fonksiyonu
        window.updateCartBadge = async function() {
            try {
                const response = await fetch('/Sepet/GetSepetUrunSayisi');
                if (response.ok) {
                    const count = await response.json();
                    const cartBadge = document.querySelector('.cart-badge');
                    const cartWrapper = document.querySelector('.cart-wrapper');
                    
                    if (count > 0) {
                        if (cartBadge) {
                            // Animasyonlu güncelleme
                            cartBadge.style.animation = 'none';
                            cartBadge.offsetHeight; // Reflow
                            cartBadge.style.animation = 'badgePulse 0.3s ease-out';
                            cartBadge.textContent = count;
                        } else {
                            const newBadge = document.createElement('div');
                            newBadge.className = 'cart-badge';
                            newBadge.textContent = count;
                            cartWrapper.appendChild(newBadge);
                            // Yeni badge için giriş animasyonu
                            newBadge.style.animation = 'badgePulse 0.3s ease-out';
                        }
                    } else {
                        if (cartBadge) {
                            // Çıkış animasyonu
                            cartBadge.style.animation = 'badgeFadeOut 0.3s ease-out';
                            setTimeout(() => cartBadge.remove(), 300);
                        }
                    }
                }
            } catch (error) {
                console.error('Badge güncelleme hatası:', error);
            }
        };

        // Sayfa yüklendiğinde sepet sayısını güncelle
        document.addEventListener('DOMContentLoaded', window.updateCartBadge);

        // Yeni animasyonlar için CSS ekle
        const style = document.createElement('style');
        style.textContent = `
            @@keyframes badgePulse {
                0% { transform: scale(1.2); }
                50% { transform: scale(0.8); }
                100% { transform: scale(1); }
            }

            @@keyframes badgeFadeOut {
                0% { transform: scale(1); opacity: 1; }
                100% { transform: scale(0); opacity: 0; }
            }

            .cart-badge {
                animation: none;
            }
        `;
        document.head.appendChild(style);

        // Sepete ekleme fonksiyonu
        async function sepeteEkle(urunId, miktar = 1) {
            try {
                const token = document.querySelector('input[name="__RequestVerificationToken"]').value;
                
                const response = await fetch('/Sepet/SepeteEkle', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': token
                    },
                    body: JSON.stringify({ urunId, miktar })
                });

                const data = await response.json();

                if (data.success) {
                    showNotification('Ürün başarıyla sepete eklendi', 'success');
                    // Sepet sayısını güncelle
                    await window.updateCartBadge();
                } else {
                    showNotification(data.message || 'Bir hata oluştu', 'error');
                }
            } catch (error) {
                console.error('Sepete ekleme hatası:', error);
                showNotification('Bir hata oluştu', 'error');
            }
        }
    </script>

