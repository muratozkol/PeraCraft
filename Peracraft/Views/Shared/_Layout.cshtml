                margin: 0;
                max-width: 100%;
                min-height: 100vh;
            }

            .quick-view-modal .modal-content {
                border-radius: 0;
                min-height: 100vh;
            }

            .quick-view-modal .product-gallery {
                min-height: 300px;
                border-radius: 0;
            }

            .quick-view-modal .product-details {
                padding: 1.5rem;
            }

            .quick-view-modal .product-title {
                font-size: 1.5rem;
            }

            .quick-view-modal .price {
                font-size: 1.75rem;
            }

            .quick-view-modal .quantity-controls {
                width: 100%;
                justify-content: space-between;
            }
        }

