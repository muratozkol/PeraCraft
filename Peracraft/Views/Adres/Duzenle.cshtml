@model Peracraft.Models.Adres
@{
    ViewData["Title"] = "Adres Düzenle";
}

<div class="container py-5">
    <div class="glass-card">
        <h1 class="mb-4">Adres Düzenle</h1>

        <form asp-action="Duzenle" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" name="ReturnToSiparis" id="ReturnToSiparis" value="false" />

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="AdresBasligi" class="form-label"></label>
                    <input asp-for="AdresBasligi" class="form-control" />
                    <span asp-validation-for="AdresBasligi" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="AdSoyad" class="form-label"></label>
                    <input asp-for="AdSoyad" class="form-control" />
                    <span asp-validation-for="AdSoyad" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="Telefon" class="form-label"></label>
                    <input asp-for="Telefon" class="form-control" />
                    <span asp-validation-for="Telefon" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="Il" class="form-label"></label>
                    <input asp-for="Il" class="form-control" />
                    <span asp-validation-for="Il" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="Ilce" class="form-label"></label>
                    <input asp-for="Ilce" class="form-control" />
                    <span asp-validation-for="Ilce" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="Mahalle" class="form-label"></label>
                    <input asp-for="Mahalle" class="form-control" />
                    <span asp-validation-for="Mahalle" class="text-danger"></span>
                </div>

                <div class="col-12 mb-3">
                    <label asp-for="AcikAdres" class="form-label"></label>
                    <textarea asp-for="AcikAdres" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="AcikAdres" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="PostaKodu" class="form-label"></label>
                    <input asp-for="PostaKodu" class="form-control" />
                    <span asp-validation-for="PostaKodu" class="text-danger"></span>
                </div>

                <div class="col-12 mb-3">
                    <div class="form-check">
                        <input asp-for="VarsayilanMi" class="form-check-input" />
                        <label asp-for="VarsayilanMi" class="form-check-label"></label>
                    </div>
                </div>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save me-2"></i>Kaydet
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Geri Dön
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Form validasyonu
            $('form').on('submit', function(e) {
                if (!$(this).valid()) {
                    e.preventDefault();
                    return false;
                }
                return true;
            });

            // ReturnToSiparis kontrolü
            var returnToSiparis = localStorage.getItem('returnToSiparis');
            if (returnToSiparis === 'true') {
                document.getElementById('ReturnToSiparis').value = 'true';
                localStorage.removeItem('returnToSiparis');
            }
        });
    </script>
} 